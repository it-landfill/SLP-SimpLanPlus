// Funzione ricorsiva per la valutazione del valore pari/dispari
{
    bool isEven (int value){
        if( value == 0){
            return true;
        } else {
            if (value == 1){
                return false;
            } else {
                return isEven(value - 2);
            }
        }
    }

    int num = 10;
    print (isEven(num));
}